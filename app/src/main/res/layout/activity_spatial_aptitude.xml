<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#94bc63"
    tools:context=".SpatialAptitude">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/q1"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/myEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:padding="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="@+id/question"
            android:letterSpacing="0.1"
            android:lines="3"
            android:maxLines="4"
            android:singleLine="false"
            android:text=""
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="@dimen/_20sdp"
            />

        <LinearLayout
            xmlns:android = "http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_below="@+id/myEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" >

            <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:src="@drawable/qq11"
                    android:id="@+id/option1"
                    android:background="@color/colorTransparent"
                    android:padding="@dimen/_8sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton android:src="@drawable/qq12"
                    android:id="@+id/option2"
                    android:padding="@dimen/_8sdp"
                    android:background="@color/colorTransparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/option3"
                    android:padding="@dimen/_8sdp"
                    android:background="@color/colorTransparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/qq13" />
                <ImageButton
                    android:src="@drawable/qq14"
                    android:padding="@dimen/_8sdp"
                    android:id="@+id/option4"
                    android:background="@color/colorTransparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
